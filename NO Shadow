wait("0.05")
-- LIGHT FIX / NO DARK AREAS / NO TEXTURE REMOVAL
-- Delta Executor | Mobile Friendly
-- Loop: 0.05s | Optimized | Safe
-- Does NOT remove floor textures or face textures

local Lighting = game:GetService("Lighting")
local RunService = game:GetService("RunService")

-- Cache original effects so we don't spam destroy
local function removeBadEffects()
	for _, v in ipairs(Lighting:GetChildren()) do
		if v:IsA("BloomEffect")
		or v:IsA("SunRaysEffect")
		or v:IsA("BlurEffect")
		or v:IsA("DepthOfFieldEffect") then
			v.Enabled = false
		end
	end
end

-- Create ColorCorrection safely (no texture damage)
local CC = Lighting:FindFirstChild("BrightFix_CC")
if not CC then
	CC = Instance.new("ColorCorrectionEffect")
	CC.Name = "BrightFix_CC"
	CC.Parent = Lighting
end

-- Main loop (very light, no lag)
task.spawn(function()
	while true do
		-- Remove darkness without killing textures
		Lighting.Brightness = 3
		Lighting.ExposureCompensation = 0.35
		Lighting.Ambient = Color3.fromRGB(180, 180, 180)
		Lighting.OutdoorAmbient = Color3.fromRGB(180, 180, 180)
		Lighting.EnvironmentDiffuseScale = 1
		Lighting.EnvironmentSpecularScale = 1

		-- Shadows control (keeps textures visible)
		Lighting.GlobalShadows = false
		Lighting.ShadowSoftness = 0

		-- Fog OFF (prevents dark distance)
		Lighting.FogStart = 100000
		Lighting.FogEnd = 1000000

		-- Color correction (bright but natural)
		CC.Enabled = true
		CC.Brightness = 0.05
		CC.Contrast = 0.05
		CC.Saturation = 0.02
		CC.TintColor = Color3.fromRGB(255, 255, 255)

		removeBadEffects()

		task.wait(0.05)
	end
end)

-- Stability hook (prevents lighting reset)
RunService.Stepped:Connect(function()
	if Lighting.GlobalShadows ~= false then
		Lighting.GlobalShadows = false
	end
end)
